<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lawinfo.dao.front.CaseInfoDao">
    <resultMap id="ResultMap" type="com.lawinfo.domain.front.CaseInfo">
        <id property="id" column="id" />
        <result column="caseorgid" property="caseorgid"/>
        <result column="caseorgname" property="caseorgname"/>
        <result column="status" property="status"/>
        <result column="contacts" property="contacts"/>
        <result column="debtorinfo" property="debtorinfo"/>
        <result column="iscreditorrelated" property="iscreditorrelated"/>
        <result column="debtorpropertyinfo" property="debtorpropertyinfo"/>
        <result column="ay" property="ay"/>
        <result column="zqbj" property="zqbj"/>
        <result column="zqdqr" property="zqdqr"/>
        <result column="zqdqrstr" property="zqdqrstr"/>
        <result column="guaranteetype" property="guaranteetype"/>
        <result column="guarantorinfo" property="guarantorinfo"/>
        <result column="isguarantorrelated" property="isguarantorrelated"/>
        <result column="guarantorpropertyinfo" property="guarantorpropertyinfo"/>
        <result column="pawninfo" property="pawninfo"/>
        <result column="pawnvalue" property="pawnvalue"/>
        <result column="caseprocedure" property="caseprocedure"/>
        <result column="court" property="court"/>
        <result column="judge" property="judge"/>
        <result column="exelawyers" property="exelawyers"/>
        <result column="sslawyers" property="sslawyers"/>
        <result column="totalprice" property="totalprice"/>
        <result column="preprice" property="preprice"/>
        <result column="sufprice" property="sufprice"/>
        <result column="ystj" property="ystj"/>
        <result column="estj" property="estj"/>
        <result column="sfss" property="sfss"/>
        <result column="ssajbh" property="ssajbh"/>
        <result column="exeajbh" property="exeajbh"/>
        <result column="casetype" property="casetype"/>
        <result column="createtime" property="createtime"/>
        <result column="createtimestr" property="createtimestr"/>
        <result column="modifiedtime" property="modifiedtime"/>
        <result column="modifiedtimestr" property="modifiedtimestr"/>
        <result column="optuserid" property="optuserid"/>
    </resultMap>
    <sql id="allColumn">
         id,caseorgid,caseorgname,status,zqdqr,zqdqrstr,contacts,debtorinfo,iscreditorrelated,debtorpropertyinfo,zqbj
         ,guaranteetype,guarantorinfo,isguarantorrelated,guarantorpropertyinfo,pawninfo,pawnvalue,caseprocedure,court
         ,exelawyers,sslawyers,totalprice,sufprice,preprice,ystj,estj,casetype,createtime,createtimestr,modifiedtime,modifiedtimestr,optuserid,judge,ay,summary,ssajbh,exeajbh,realtotalprice,sfss
    </sql>
    <sql id="condition">
        <trim prefix="WHERE" prefixOverrides="AND|OR">
            <if test="id!=null and id>0">
                id = #{id}
            </if>
            <if test="summary!=null and summary!=''">
                and summary like concat('%', #{summary}, '%')
            </if>
            <if test="currenttabtype!=null and currenttabtype==1">
                and status &lt;9999
            </if>
            <if test="currenttabtype!=null and currenttabtype==2">
                and status=9999
            </if>
            <if test="caseinfoids!=null">
                and id IN
                <foreach item="item" index="index" collection="caseinfoids"
                         open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            <!--<if test="exelawyerid!=null and exelawyerid!=''">
                and exelawyerid like concat('%', #{exelawyerid}, '%')
            </if>
            <if test="sslawyerid!=null and sslawyerid!=''">
                and sslawyerid like concat('%', #{sslawyerid}, '%')
            </if>-->
            <!--<if test="userid!=null and userid!=''">
                and (exelawyerid like concat('%', #{userid}, '%') or sslawyerid like concat('%', #{userid}, '%'))
            </if>-->
        </trim>
    </sql>
    <sql id="page">
          limit #{startRow},#{pageSize}
    </sql>
    <select id="findAll" parameterType="com.lawinfo.domain.front.query.CaseInfoQuery"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
         from
          CaseInfo
    </select>
    <select id="findById" parameterType="long"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
        from
        CaseInfo where id = #{id}
    </select>
    <select id="findList" parameterType="com.lawinfo.domain.front.query.CaseInfoQuery"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
        from
        CaseInfo
        <include refid="condition"/>
         order by createtime desc
    </select>
    <select id="findListByPage" parameterType="com.lawinfo.domain.front.query.CaseInfoQuery"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
        from
        CaseInfo
        <include refid="condition"/>
        <include refid="page"/>
        order by createtime desc
    </select>
    <select id="count" parameterType="com.lawinfo.domain.front.query.CaseInfoQuery" resultType="int">
        SELECT
        COUNT(1)
        FROM
        CaseInfo
        <include refid="condition"/>
    </select>
    <insert id="save" useGeneratedKeys="true" keyProperty="id" parameterType="com.lawinfo.domain.front.CaseInfo">
        insert into CaseInfo(caseorgid,caseorgname,contacts,zqdqr,zqdqrstr,debtorinfo,iscreditorrelated,debtorpropertyinfo,zqbj
         ,guaranteetype,guarantorinfo,isguarantorrelated,guarantorpropertyinfo,pawninfo,pawnvalue,caseprocedure,court
         ,sslawyers,exelawyers,totalprice,createtime,createtimestr,modifiedtime,modifiedtimestr,optuserid,summary,judge,ay,sufprice,preprice,ystj,estj,casetype,status,ssajbh,exeajbh,realtotalprice,sfss)
         values(#{caseorgid},#{caseorgname},#{contacts},#{zqdqr},#{zqdqrstr},#{debtorinfo},#{iscreditorrelated},#{debtorpropertyinfo},#{zqbj},#{guaranteetype},
         #{guarantorinfo},#{isguarantorrelated},#{guarantorpropertyinfo},#{pawninfo},#{pawnvalue},#{caseprocedure},#{court},#{sslawyers},#{exelawyers},#{totalprice},#{createtime},#{createtimestr},#{modifiedtime},#{modifiedtimestr},#{optuserid},#{summary},#{judge},#{ay},#{sufprice},#{preprice},#{ystj},#{estj},#{casetype},#{status},#{ssajbh},#{exeajbh},#{realtotalprice},#{sfss})
    </insert>
    <delete id="deleteById" parameterType="long">    <!-- 删除用户 -->
        delete from CaseInfo where id=#{id}
    </delete>
    <update id="updateStatus" parameterType="com.lawinfo.domain.front.CaseInfo">
        update CaseInfo set status=#{status} where id=#{id}
    </update>
    <update id="updateYstj" parameterType="com.lawinfo.domain.front.CaseInfo">
        update CaseInfo set ystj=#{ystj} where id=#{id}
    </update>
    <update id="updateEstj" parameterType="com.lawinfo.domain.front.CaseInfo">
        update CaseInfo set estj=#{estj} where id=#{id}
    </update>
    <update id="updateSfss" parameterType="com.lawinfo.domain.front.CaseInfo">
        update CaseInfo set sfss=#{sfss} where id=#{id}
    </update>
    <update id="updatePrePrice" parameterType="com.lawinfo.domain.front.CaseInfo">
        update CaseInfo set preprice=#{preprice},realtotalprice=sufprice+#{preprice} where id=#{id}
    </update>
    <update id="updateSufPrice" parameterType="com.lawinfo.domain.front.CaseInfo">
        update CaseInfo set sufprice=#{sufprice},realtotalprice=preprice+#{sufprice} where id=#{id}
    </update>
    <update id="updateExeLawyers" parameterType="com.lawinfo.domain.front.CaseInfo">
        update CaseInfo set exelawyers=#{exelawyers},exeajbh=#{exeajbh} where id=#{id}
    </update>
</mapper>