<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lawinfo.dao.org.OrgInfoDao">
    <resultMap id="OrgInfoResult" type="com.lawinfo.domain.org.OrgInfo">
        <id property="id" column="id" />
        <result column="name" property="name"/>
        <result column="orgtype" property="orgtype"/>
        <result column="description" property="description"/>
    </resultMap>
    <sql id="findAll">
         id,name,orgtype,description
    </sql>
    <sql id="condition">
        <trim prefix="WHERE" prefixOverrides="AND|OR">
            <if test="id>0">
                id = #id#
            </if>
            <if test="type>0">
                and orgtype = #orgtype#
            </if>
        </trim>
        <!--<where>
            <if test="id>0">
                ID = #id#
            </if>
            <if test="type>0">
                AND TYPE = #type#
            </if>
        </where>-->
    </sql>
    <select id="findAll" parameterType="com.lawinfo.domain.org.OrgInfo"  resultMap="OrgInfoResult">
        select
        <include refid="findAll"/>
         from
          ORGINFO
    </select>
