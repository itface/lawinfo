<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lawinfo.dao.org.SmsDao">
    <resultMap id="ResultMap" type="com.lawinfo.domain.org.Sms">
        <id property="id" column="id" />
        <result column="phoneno" property="phoneno"/>
        <result column="pwd" property="pwd"/>
        <result column="expiretime" property="expiretime"/>
        <result column="expiretimestr" property="expiretimestr"/>
        <result column="loginfailcount" property="loginfailcount"/>
        <result column="description" property="description"/>
        <result column="createtime" property="createtime"/>
        <result column="createtimestr" property="createtimestr"/>
        <result column="modifiedtime" property="modifiedtime"/>
        <result column="modifiedtimestr" property="modifiedtimestr"/>
        <result column="optuserid" property="optuserid"/>
    </resultMap>
    <sql id="allColumn">
         id,phoneno,pwd,expiretime,expiretimestr,loginfailcount,description,createtime,createtimestr,modifiedtime,modifiedtimestr,optuserid
    </sql>
    <sql id="condition">
        <trim prefix="WHERE" prefixOverrides="AND|OR">
            <if test="id>0">
                id = #{id}
            </if>
            <if test="expiretime>0">
                and expiretime &gt; #{expiretime}-1
            </if>
            <if test="phoneno!=null and phoneno!=''">
                and phoneno = #{phoneno}
            </if>
        </trim>
    </sql>
    <sql id="page">
          limit #{startRow},#{pageSize}
    </sql>
    <select id="findAll" parameterType="com.lawinfo.domain.org.query.SmsQuery"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
         from
          Sms
    </select>
    <select id="findById" parameterType="long"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
        from
        Sms where id = #{id}
    </select>
    <select id="findList" parameterType="com.lawinfo.domain.org.query.SmsQuery"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
        from
        Sms
        <include refid="condition"/>
    </select>
    <select id="findListByPage" parameterType="com.lawinfo.domain.org.query.SmsQuery"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
        from
        Sms
        <include refid="condition"/>
        <include refid="page"/>
    </select>
    <select id="count" parameterType="com.lawinfo.domain.org.query.SmsQuery" resultType="int">
        SELECT
        COUNT(1)
        FROM
        Sms
        <include refid="condition"/>
    </select>
    <insert id="save" parameterType="com.lawinfo.domain.org.Sms">
        insert into Sms(phoneno,pwd,expiretime,expiretimestr,loginfailcount,description,createtime,createtimestr,modifiedtime,modifiedtimestr,optuserid)
        values(#{phoneno},#{pwd},#{expiretime},#{expiretimestr},#{loginfailcount},#{description},#{createtime},#{createtimestr},#{modifiedtime},#{modifiedtimestr},#{optuserid})
    </insert>
    <delete id="deleteById" parameterType="long">    <!-- 删除用户 -->
        delete from Sms where id=#{id}
    </delete>
    <update id="updateLoginfailcount" parameterType="long">
        update sms set loginfailcount=loginfailcount+1 where id=#{id}
    </update>
</mapper>