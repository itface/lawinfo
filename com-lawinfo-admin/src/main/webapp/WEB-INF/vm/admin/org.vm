    <script id="editScriptTemplate" type="text/template">
        <div class='edit-form'>
            <form role="form" id="editForm">
                <div class="row form-group">
                    <div class="col-xs-2">
                        <label for="name">动作名称:</label>
                    </div>
                    <div class="col-xs-4">
                        <input id="name" name="name" class="form-control" type="text"/>
                    </div>
                    <div class="col-xs-2">
                        <label for="actionkey">动作url:</label>
                    </div>
                    <div class="col-xs-4">
                        <input id="actionkey" name="actionkey" class="form-control" type="text"/>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-xs-2">
                        <label for="tag">动作标签:</label>
                    </div>
                    <div class="col-xs-10">
                        <textarea id="tag" name="tag" rows="6" class="form-control"></textarea>
                    </div>
                </div>
                <div><input type="hidden" name='id' id='id'/></div>
                <div class="row">
                    <div class="col-xs-12" style="">
                        <div class="alert alert-danger center-block error-msg" style="display:none"></div>
                    </div>
                </div>
            </form>
        </div>
    </script>
    <script>
        var currentId;
        var locationUrl = '/login/actionview';
        jQuery('#pager').my_page({url:locationUrl,currentPage:$currentPage,formname:'mainform',total:$total,pageSize:$pagesize});
        jQuery('.glyphicon-pencil').click(function(e){
            currentId = jQuery(e.target).parents('tr').attr('objId');
            var edithtml = jQuery('#editScriptTemplate').html();
            setFormData('edit');
            showModal(edithtml,'更新','取消','保存',edit);
        });
        jQuery('.glyphicon-eye-open').click(function(e){
            currentId = jQuery(e.target).parents('tr').attr('objId');
            var readhtml = jQuery('#readScriptTemplate').html();
            setFormData('read');
            showModal(readhtml,'详情','取消','关闭',hideModal);
        });
        jQuery('.btn-add').click(function(e){
            currentId=0;
            var edithtml = jQuery('#editScriptTemplate').html();
            showModal(edithtml,'更新','取消','保存',edit);
            initEditFormData();
        });

        // $('#myModal').on('shown.bs.modal', function () {

        // })
        function showModalErrorMsg(msg){
            jQuery('#myModal .error-msg').empty();
            jQuery('#myModal .error-msg').html(msg);
            jQuery('#myModal .error-msg').show();
        }
        function showModal(html,title,cancelBtnVal,comfirmBtnval,confirmCallback){
            jQuery('#myModal .error-msg').empty();
            jQuery('#myModal .modal-body').empty();
            jQuery('#myModal .modal-title').html(title);
            jQuery('#myModal .btn-cancel').html(cancelBtnVal);
            jQuery('#myModal .btn-confirm').html(comfirmBtnval);
            jQuery('#myModal .modal-body').append(html);
            jQuery('#myModal .btn-confirm').unbind("click")
            if(confirmCallback){
                jQuery('#myModal .btn-confirm').on('click',confirmCallback);
            }
            jQuery('#myModal').modal('show');
        }
        function hideModal(){
            jQuery('#myModal').modal('hide');
        }
        jQuery('.btn-del').click(function(e){
            currentId = jQuery(e.target).parents('tr').attr('objId');
            if(currentId>0){
                showModal('确认删除？','注意','取消','确定删除',del);
            }else{
                showModal('删除无效','注意','取消','确定删除',del);
            }
        });
        function del(){
            var id = currentId;
            var url = "/login/remove";
            jQuery.ajax({
                url:url,
                data:{id:id},
                type:'POST',
                cache:false,
                success:function(data) {
                    if(data>0){
                        window.location.href=locationUrl;
                    }
                    showModal('删除失败','注意','取消','确定',null);
                },
                error:function() {
                    showModal('删除异常','注意','取消','确定',null);
                }
            });
        }
        function edit(){
            var id = currentId;
            var param = $("form[id='editForm']").serialize();
            var url = "/login/edit";
            jQuery.ajax({
                url:url,
                data:param,
                type:'POST',
                cache:false,
                success:function(data) {
                    if(data){
                        showModalErrorMsg(data);
                    }else{
                        window.location.href=locationUrl;
                    }
                },
                error:function() {
                    if(type=='edit'){
                        showModalErrorMsg('提交数据异常');
                    }else if(type=='read'){
                        showModalErrorMsg('提交数据异常');
                    }else{
                        alert('提交数据异常');
                    }
                }
            });
        }
        function setFormData(type){
            var readFormClass = 'read-form';
            var editFormClass = 'edit-form';
            var id = currentId;
            jQuery.ajax({
                url:'/login/findbyid',
                data:{id:id},
                type:'GET',
                cache:false,
                success:function(data) {
                    if(data){
                        if(type=='edit'){
                            setEditFormData(data);
                        }else if(type=='read'){
                            setReadFormData(data);
                        }
                    }else{
                        if(type=='edit'){
                            showModalErrorMsg('数据为空');
                        }else if(type=='read'){
                            showModalErrorMsg('数据为空');
                        }else{
                            alert('提交数据异常');
                        }
                    }
                },
                error:function() {
                    if(type=='edit'){
                        showModalErrorMsg('加载数据异常');
                    }else if(type=='read'){
                        showModalErrorMsg('加载数据异常');
                    }else{
                        alert('提交数据异常');
                    }
                }
            });
        }
        function initEditFormData(){
            jQuery('#name').val('');
            jQuery('#actionkey').val('');
            jQuery('#tag').val('');
            jQuery('#id').val(0);
        }
        function setEditFormData(data){
            initEditFormData();
            if(data){
                jQuery('#name').val(data.name);
                jQuery('#actionkey').val(data.actionkey);
                jQuery('#tag').val(data.tag);
                jQuery('#id').val(data.id);
            }
        }
        function setReadFormData(data){
            if(data){
                jQuery('.read-form-name').html(data.name);
                jQuery('.read-form-actionkey').html(data.actionkey);
                jQuery('.read-form-tag').html(data.tag);
            }
        }
    </script>
