<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lawinfo.dao.org.UserRoleDao">
    <resultMap id="ResultMap" type="com.lawinfo.domain.org.UserRole">
        <id property="id" column="id" />
        <result column="userid" property="userid"/>
        <result column="roleid" property="roleid"/>
    </resultMap>
    <sql id="allColumn">
         id,userid,roleid
    </sql>
    <sql id="condition">
        <trim prefix="WHERE" prefixOverrides="AND|OR">
            <if test="id>0">
                id = #{id}
            </if>
            <if test="roleid>0">
                and roleid = #{roleid}
            </if>
            <if test="userid!=null and userid!=''">
                and userid = #{userid}
            </if>
        </trim>
    </sql>
    <sql id="page">
          limit #{startRow},#{pageSize}
    </sql>
    <select id="findAll" parameterType="com.lawinfo.domain.org.query.UserRoleQuery"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
         from
          UserRole
    </select>
    <select id="findById" parameterType="long"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
        from
        UserRole where id = #{id}
    </select>
    <select id="findList" parameterType="com.lawinfo.domain.org.query.UserRoleQuery"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
        from
        UserRole
        <include refid="condition"/>
    </select>
    <select id="findListByPage" parameterType="com.lawinfo.domain.org.query.UserRoleQuery"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
        from
        UserRole
        <include refid="condition"/>
        <include refid="page"/>
    </select>
    <select id="count" parameterType="com.lawinfo.domain.org.query.UserRoleQuery" resultType="int">
        SELECT
        COUNT(1)
        FROM
        UserRole
        <include refid="condition"/>
    </select>
    <insert id="save" parameterType="com.lawinfo.domain.org.UserRole">
        insert into UserRole(userid,roleid) values(#{userid},#{roleid})
    </insert>
    <delete id="deleteById" parameterType="long">    <!-- 删除用户 -->
        delete from UserRole where id=#{id}
    </delete>
    <!--<update id="update" parameterType="com.icreate.entity.User">
        update tb_user set username=#{username},password=#{password},email=#{email},sex=#{sex},age=#{age} where username=#{username}
    </update>-->
</mapper>