<div>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" style="width: 800px;">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel"></h4>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default btn-cancel" data-dismiss="modal"></button>
                    <button type="button" class="btn btn-primary btn-confirm"></button>
                </div>
            </div>
        </div>
    </div>
</div>
<script id="readScriptTemplate" type="text/template">
    <div class='read-form'>
        <div class="row">
            <div class="col-xs-2">
                <label class='read-form-field'>名称:</label>
            </div>
            <div class="col-xs-4">
                <span class='read-form-name line-word-break read-form-field'></span>
            </div>
            <div class="col-xs-2">
                <label class='read-form-field'>动作key:</label>
            </div>
            <div class="col-xs-4">
                <span class='read-form-actionkey line-word-break read-form-field'></span>
            </div>
        </div>
        <div class="row">
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="alert alert-danger center-block error-msg" style="display:none"></div>
            </div
        </div>
    </div>
</script>
<script id="editScriptTemplate" type="text/template">
    <div class='edit-form'>
        <form role="form" id="editForm">
            <div class="row form-group">
                <div class="col-xs-2">
                    <label>名称</label>
                </div>
                <div class="col-xs-4">
                    <input id="name" name="name" class="form-control" type="text"/>
                </div>
                <div class="col-xs-2">
                    <label>动作key</label>
                </div>
                <div class="col-xs-4">
                    <input id="actionkey" name="actionkey" class="form-control" type="text"/>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-xs-2">
                    <label>动作tag</label>
                </div>
                <div class="col-xs-4">
                    <input id="tag" name="tag" class="form-control datetimepicker-class" type="text" readonly/>
                </div>
            </div>
            <div><input type="hidden" name='id' id='id'/></div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="alert alert-danger center-block error-msg" style="display:none"></div>
                </div
            </div>
        </form>
    </div>
</script>
<script>
    var currentId;
    var locationUrl = '/login/org';
    jQuery('#pager').my_page({url:locationUrl,currentPage:$currentPage,formname:'mainform',total:$total,pageSize:$pagesize});


    function initEditFormEvent(){
        $('.datetimepicker-class').datetimepicker({
            format: 'yyyy-mm-dd',
            minView: "month",
            language: 'zh-CN',
            autoclose:true
        });
    }

    jQuery('.btn-del').click(function(e){
        currentId = jQuery(e.target).parents('tr').attr('objId');
        if(currentId>0){
            showModal('确认删除？','注意','取消','确定删除',del);
        }else{
            showModal('删除无效','注意','取消','确定删除',del);
        }
    })

    jQuery('.glyphicon-pencil').click(function(e){
        currentId = jQuery(e.target).parents('tr').attr('objId');
        var edithtml = jQuery('#editScriptTemplate').html();
        showModal(edithtml,'更新','取消','保存',edit);
        setFormData('edit');
        initEditFormEvent();
    })

    jQuery('.glyphicon-eye-open').click(function(e){
        currentId = jQuery(e.target).parents('tr').attr('objId');
        var readhtml = jQuery('#readScriptTemplate').html();
        showModal(readhtml,'详情','取消','关闭',hideModal);
        setFormData('read');
    })

    jQuery('.btn-add').click(function(e){
        currentId = 0;
        var edithtml = jQuery('#editScriptTemplate').html();
        showModal(edithtml,'新增','取消','保存',edit);
        initEditFormData();
        initEditFormEvent();
    })

    function showModalErrorMsg(msg){
        jQuery('#myModal .error-msg').empty();
        jQuery('#myModal .error-msg').html(msg);
        jQuery('#myModal .error-msg').show();
    }

    function showModal(html,title,cancelBtnVal,comfirmBtnval,confirmCallback){
        jQuery('#myModal .error-msg').empty();
        jQuery('#myModal .modal-body').empty();
        jQuery('#myModal .modal-title').html(title);
        jQuery('#myModal .btn-cancel').html(cancelBtnVal);
        jQuery('#myModal .btn-confirm').html(comfirmBtnval);
        jQuery('#myModal .modal-body').append(html);
        jQuery('#myModal .btn-confirm').unbind("click");
        if(confirmCallback){
            jQuery('#myModal .btn-confirm').on('click',confirmCallback);
        }
        jQuery('#myModal').modal('show');
    }

    function del(){
        var id = currentId;
        var url = locationUrl+'/remove';
        jQuery.ajax({
            url:url,
            data:{id:id},
            type:'POST',
            cache:false,
            success:function(data) {
                if(data>0){
                    window.location.href=locationUrl;
                }else{
                    showModal('删除失败','注意','取消','确定',null);
                }
            },
            error:function(){
                showModal('删除异常','注意','取消','确定',null);
            }
        });
    }

    function edit(){
        var id = currentId;
        var param = $("form[id='editForm']").serialize();
        var url = locationUrl+'/edit';
        jQuery.ajax({
            url:url,
            data:param,
            type:'POST',
            cache:false,
            success:function(data) {
                if(data){
                    showModalErrorMsg(data);
                }else{
                    window.location.href=locationUrl;
                }
            },
            error:function(){
                showModalErrorMsg('提交数据异常');
            }
        });
    }

    function setFormData(type){
        var readFormClass = 'read-form';
        var editFormClass = 'edit-form';
        var id = currentId;
        jQuery.ajax({
            url:locationUrl+'/findbyid',
            data:{id:id},
            type:'GET',
            cache:false,
            success:function(data) {
                if(data){
                    if(type=='edit'){
                        setEditFormData(data);
                    }else if(type=='read'){
                        setReadFormData(data);
                    }
                }else{
                    showModalErrorMsg('数据为空');
                }
            },
            error:function(){
                showModalErrorMsg('查询数据异常');
            }
        });
    }

    function hideModal(){
        jQuery('#myModal').modal('hide');
    }

    function initEditFormData(){
        jQuery('#name').val('');
        jQuery('#actionkey').val('');
        jQuery('#tag').val('');
        jQuery('#id').val(0);
    }

    function setEditFormData(data){
        if(data){
            jQuery('#name').val(data.name);
            jQuery('#actionkey').val(data.actionkey);
            jQuery('#tag').val(data.tag);
            jQuery('#id').val(data.id);
        }
    }

    function setReadFormData(data){
        initEditFormData();
        if(data){
            jQuery('.read-form-name').html(data.name);
            jQuery('.read-form-actionkey').html(data.actionkey);
            jQuery('.read-form-tag').html(data.tag);
        }
    }

</script>
</html>