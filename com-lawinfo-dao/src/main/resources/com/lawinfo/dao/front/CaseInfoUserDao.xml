<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lawinfo.dao.front.CaseInfoUserDao">
    <resultMap id="ResultMap" type="com.lawinfo.domain.front.CaseInfoUser">
        <id property="id" column="id" />
        <result column="caseinfoid" property="caseinfoid"/>
        <result column="userid" property="userid"/>
        <result column="usertype" property="usertype"/>
    </resultMap>
    <sql id="allColumn">
         id,caseinfoid,userid,usertype
    </sql>
    <sql id="condition">
        <trim prefix="WHERE" prefixOverrides="AND|OR">
            <if test="id!=null">
                id = #{id}
            </if>
            <if test="caseinfoid!=null">
                and caseinfoid = #{caseinfoid}
            </if>
            <if test="userids!=null">
                and  userid IN
                <foreach item="item" index="index" collection="userids"
                         open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
            <if test="usertype!=null">
                and usertype = #{usertype}
            </if>
        </trim>
    </sql>
    <sql id="page">
          limit #{startRow},#{pageSize}
    </sql>
    <select id="findAll" parameterType="com.lawinfo.domain.front.query.CaseInfoUserQuery"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
         from
          caseinfouser
    </select>
    <select id="findById" parameterType="long"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
        from
        caseinfouser where id = #{id}
    </select>
    <select id="findList" parameterType="com.lawinfo.domain.front.query.CaseInfoUserQuery"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
        from
        caseinfouser
        <include refid="condition"/>
    </select>
    <select id="findAllCaseinfoid" parameterType="com.lawinfo.domain.front.query.CaseInfoUserQuery"  resultType="Long">
        select caseinfoid
        from
        caseinfouser
        <include refid="condition"/>
    </select>
    <select id="findListByPage" parameterType="com.lawinfo.domain.front.query.CaseInfoUserQuery"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
        from
        caseinfouser
        <include refid="condition"/>
        <include refid="page"/>
    </select>
    <insert id="save" parameterType="com.lawinfo.domain.front.CaseInfoUser">
        insert into caseinfouser(caseinfoid,userid,usertype)
        values(#{caseinfoid},#{userid},#{usertype})
    </insert>
    <delete id="deleteById" parameterType="long">    <!-- 删除用户 -->
        delete from caseinfouser where id=#{id}
    </delete>
    <delete id="deleteByCaseinfoid" parameterType="long">    <!-- 删除用户 -->
        delete from caseinfouser where caseinfoid=#{caseinfoid}
    </delete>
    <!--<update id="update" parameterType="com.icreate.entity.User">
        update tb_user set username=#{username},password=#{password},email=#{email},sex=#{sex},age=#{age} where username=#{username}
    </update>-->
</mapper>