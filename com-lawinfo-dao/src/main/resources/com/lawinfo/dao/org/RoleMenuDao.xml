<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lawinfo.dao.org.RoleMenuDao">
    <resultMap id="ResultMap" type="com.lawinfo.domain.org.RoleMenu">
        <id property="id" column="id" />
        <result column="menuid" property="menuid"/>
        <result column="roleid" property="roleid"/>
    </resultMap>
    <sql id="allColumn">
         id,menuid,roleid
    </sql>
    <sql id="condition">
        <trim prefix="WHERE" prefixOverrides="AND|OR">
            <if test="id!=null">
                id = #{id}
            </if>
            <if test="roleid!=null">
                and roleid = #{roleid}
            </if>
            <if test="menuid!=null">
                and menuid = #{menuid}
            </if>
        </trim>
        <!--<where>
            <if test="id>0">
                ID = #id#
            </if>
            <if test="type>0">
                AND TYPE = #type#
            </if>
        </where>-->
    </sql>
    <sql id="page">
          limit #{startRow},#{pageSize}
    </sql>
    <select id="findAll" parameterType="com.lawinfo.domain.org.query.RoleMenuQuery"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
         from
        rolemenu
    </select>
    <select id="findById" parameterType="long"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
        from
        rolemenu where id = #{id}
    </select>
    <select id="findByRoleid" parameterType="long"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
        from
        rolemenu where roleid = #{roleid}
    </select>
    <select id="findByMenuid" parameterType="long"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
        from
        rolemenu where menuid = #{menuid}
    </select>
    <select id="findList" parameterType="com.lawinfo.domain.org.query.RoleMenuQuery"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
        from
        rolemenu
        <include refid="condition"/>
    </select>
    <select id="findListByPage" parameterType="com.lawinfo.domain.org.query.RoleMenuQuery"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
        from
        rolemenu
        <include refid="condition"/>
        <include refid="page"/>
    </select>
    <select id="count" parameterType="com.lawinfo.domain.org.query.RoleMenuQuery" resultType="int">
        SELECT
        COUNT(1)
        FROM
        rolemenu
        <include refid="condition"/>
    </select>
    <insert id="save" parameterType="com.lawinfo.domain.org.RoleMenu">
        insert into rolemenu(roleid,menuid)
        values(#{roleid},#{menuid})
    </insert>
    <delete id="deleteById" parameterType="long">
        delete from rolemenu where id=#{id}
    </delete>
    <delete id="deleteByMenuid" parameterType="long">
        delete from rolemenu where menuid=#{menuid}
    </delete>
    <delete id="deleteByRoleid" parameterType="long">
        delete from rolemenu where roleid=#{roleid}
    </delete>
    <!--<update id="update" parameterType="com.icreate.entity.User">
        update tb_user set username=#{username},password=#{password},email=#{email},sex=#{sex},age=#{age} where username=#{username}
    </update>-->
</mapper>