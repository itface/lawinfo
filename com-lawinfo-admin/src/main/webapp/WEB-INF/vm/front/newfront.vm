        #set($startIndex = $!pageVo.getStartIndex())
    #end
<body>
<form id='mainform' name='mainform'>
    <div class="container">
        <div class="table-responsive">
            <div>
                <table class="table table-bordered table-striped table-hover common-table">
                    <caption><h2>组织结构</h2></caption>
                    <thead>
                    <tr>
                        <th>
                            <a href="javascript:void(0)" class="btn btn-default btn-sm btn-add">
                                <span class="glyphicon glyphicon-plus"></span> 添加
                            </a>
                        </th>
                        <th>序号</th>
                        <th>
                            名称										</th>
                        <th>
                            动作key										</th>
                        <th>操作</th>
                    </tr>
                    </thead>
                    <tbody>
                        #if($list && $list.size()>0)
                            #foreach($obj in $list)
                                #set($tempIndex=$velocityCount+$startIndex - 1)
