<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lawinfo.dao.org.RoleActionDao">
    <resultMap id="ResultMap" type="com.lawinfo.domain.org.RoleAction">
        <id property="id" column="id" />
        <result column="actionid" property="actionid"/>
        <result column="roleid" property="roleid"/>
    </resultMap>
    <sql id="allColumn">
         id,actionid,roleid
    </sql>
    <sql id="condition">
        <trim prefix="WHERE" prefixOverrides="AND|OR">
            <if test="id!=null">
                id = #{id}
            </if>
            <if test="roleid!=null">
                and roleid = #{roleid}
            </if>
            <if test="actionid!=null">
                and actionid = #{actionid}
            </if>
        </trim>
        <!--<where>
            <if test="id>0">
                ID = #id#
            </if>
            <if test="type>0">
                AND TYPE = #type#
            </if>
        </where>-->
    </sql>
    <sql id="page">
          limit #{startRow},#{pageSize}
    </sql>
    <select id="findAll" parameterType="com.lawinfo.domain.org.query.RoleActionQuery"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
         from
          roleaction
    </select>
    <select id="findById" parameterType="long"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
        from
        roleaction where id = #{id}
    </select>
    <select id="findByRoleid" parameterType="long"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
        from
        roleaction where roleid = #{roleid}
    </select>
    <select id="findByActionid" parameterType="long"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
        from
        roleaction where actionid = #{actionid}
    </select>
    <select id="findList" parameterType="com.lawinfo.domain.org.query.RoleActionQuery"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
        from
        roleaction
        <include refid="condition"/>
    </select>
    <select id="findListByPage" parameterType="com.lawinfo.domain.org.query.RoleActionQuery"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
        from
        roleaction
        <include refid="condition"/>
        <include refid="page"/>
    </select>
    <select id="count" parameterType="com.lawinfo.domain.org.query.RoleActionQuery" resultType="int">
        SELECT
        COUNT(1)
        FROM
        roleaction
        <include refid="condition"/>
    </select>
    <insert id="save" parameterType="com.lawinfo.domain.org.RoleAction">
        insert into roleaction(roleid,actionid)
        values(#{roleid},#{actionid})
    </insert>
    <delete id="deleteById" parameterType="long">
        delete from roleaction where id=#{id}
    </delete>
    <delete id="deleteByActionid" parameterType="long">
        delete from roleaction where actionid=#{actionid}
    </delete>
    <delete id="deleteByRoleid" parameterType="long">
        delete from roleaction where roleid=#{roleid}
    </delete>
    <!--<update id="update" parameterType="com.icreate.entity.User">
        update tb_user set username=#{username},password=#{password},email=#{email},sex=#{sex},age=#{age} where username=#{username}
    </update>-->
</mapper>