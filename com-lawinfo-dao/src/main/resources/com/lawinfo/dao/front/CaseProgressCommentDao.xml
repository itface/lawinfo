<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lawinfo.dao.front.CaseProgressCommentDao">
    <resultMap id="ResultMap" type="com.lawinfo.domain.front.CaseProgressComment">
        <id property="id" column="id" />
        <result column="caseinfoid" property="caseinfoid"/>
        <result column="processnodeid" property="processnodeid"/>
        <result column="comment" property="comment"/>
        <result column="nexttask" property="nexttask"/>
        <result column="createtime" property="createtime"/>
        <result column="createtimestr" property="createtimestr"/>
        <result column="modifiedtime" property="modifiedtime"/>
        <result column="modifiedtimestr" property="modifiedtimestr"/>
        <result column="optuserid" property="optuserid"/>
    </resultMap>
    <sql id="allColumn">
         id,caseinfoid,processnodeid,comment,nexttask,createtime,createtimestr,modifiedtime,modifiedtimestr,optuserid
    </sql>
    <sql id="condition">
        <trim prefix="WHERE" prefixOverrides="AND | OR">
            <if test="id!=null">
                id = #{id}
            </if>
            <if test="caseinfoid!=null">
                and caseinfoid=#{caseinfoid}
            </if>
        </trim>
    </sql>
    <sql id="page">
          limit #{startRow},#{pageSize}
    </sql>
    <select id="findAll" parameterType="com.lawinfo.domain.front.query.CaseProgressCommentQuery"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
         from
          CaseProgress
    </select>
    <select id="findById" parameterType="long"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
        from
        CaseProgress where id = #{id}
    </select>
    <select id="findList" parameterType="com.lawinfo.domain.front.query.CaseProgressCommentQuery"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
        from
        CaseProgress
        <include refid="condition"/>
        order by processnodeid desc
    </select>
    <select id="findListByPage" parameterType="com.lawinfo.domain.front.query.CaseProgressCommentQuery"  resultMap="ResultMap">
        select
        <include refid="allColumn"/>
        from
        CaseProgress
        <include refid="condition"/>
        <include refid="page"/>
    </select>
    <select id="count" parameterType="com.lawinfo.domain.front.query.CaseProgressCommentQuery" resultType="int">
        SELECT
        COUNT(1)
        FROM
        CaseProgress
        <include refid="condition"/>
    </select>
    <insert id="save" parameterType="com.lawinfo.domain.front.CaseProgress">
        insert into CaseProgress(caseinfoid,processnodeid,comment,nexttask,createtime,createtimestr,modifiedtime,modifiedtimestr,optuserid)
        values(#{caseinfoid},#{processnodeid},#{comment},#{nexttask},#{createtime},#{createtimestr},#{modifiedtime},#{modifiedtimestr},#{optuserid})
    </insert>
    <delete id="deleteById" parameterType="long">    <!-- 删除用户 -->
        delete from CaseProgress where id=#{id}
    </delete>
    <delete id="deleteByCaseinfoid" parameterType="long">    <!-- 删除用户 -->
        delete from CaseProgress where caseinfoid=#{caseinfoid}
    </delete>
    <!--<update id="update" parameterType="com.icreate.entity.User">
        update tb_user set username=#{username},password=#{password},email=#{email},sex=#{sex},age=#{age} where username=#{username}
    </update>-->
</mapper>